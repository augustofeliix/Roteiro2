<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.augustofelix.roteiro2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".activity_traduzir_ingles" android:label="Ingles">
        <intent-filter>
            <action android:name="Traduzir" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="Traduzir_Ingles" />
        </intent-filter>
        </activity>

        <activity android:name=".traduzir_Frances" android:label="Frances">
            <intent-filter>
                <action android:name="Traduzir" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="Traduzir_Frances" />
            </intent-filter>

        </activity>
    </application>

</manifest>
